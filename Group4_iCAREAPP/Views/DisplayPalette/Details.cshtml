<!-- @Model Group4_iCAREAPP.Models.DocumentMetadata -->
@model IEnumerable<Group4_iCAREAPP.Models.DocumentMetadata>

@{
    ViewBag.Title = "Details";
}

<h2>Document List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.docName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateOfCreation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.versions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iCareWorker.profession)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModificationHistory.description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.docName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateOfCreation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.versions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iCareWorker.profession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModificationHistory.description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.docID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.docID })
            </td>
        </tr>
    }
</table>

<p>
    <button type="button" onclick="location.href='@Url.Action("Index", "DisplayPalette")'">Back</button>
</p>
