@model Group4_iCAREAPP.Models.iCareUser

@{
    ViewBag.Title = "Login";
}
<head>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>


<div class="center-element">
    <div class="rectangle">
        @using (Html.BeginForm())
        {


            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h4>Login</h4>
                <hr />

                @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger" style="margin:auto">
                        @ViewBag.ErrorMessage
                    </div>
                }

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group" style="margin:auto">

                    <label class="control-label col-md-2">Username</label>
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.ID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.ID, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group" style="margin: auto">
                    <label class="control-label col-md-2">Password</label>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.userShadow, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.userShadow, "", new { @class = "text-danger" })
                    </div>
                </div>

                <h2>
                     
                </h2>

                <div class="col-md-offset-2 col-md-20" style="margin: auto">
                    <input type="submit" value="Login" class="button" style="background-color: cornflowerblue; padding: 10px 10px; font-size: 16px;" />
                    <button type="button" style="background-color: cornflowerblue"onclick="location.href='@Url.Action("Create", "UserAuthentication")'">Create Account</button>
                </div>
            </div>



        }
    </div>
</div>

