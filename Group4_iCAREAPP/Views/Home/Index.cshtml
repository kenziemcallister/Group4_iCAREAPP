@{
    ViewBag.Title = "Home Page";
}

<head>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" /> 
</head>

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">iCARE Healthcare System</h1>

        <!--Login successful message-->
        @if (TempData["LoginMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["LoginMessage"]
            </div>
        }

        @if (TempData["LogoutMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["LogoutMessage"]
            </div>
        }

    </section>

    <div class="row">
        <section class="col-md-4" aria-labelledby="gettingStartedTitle">
            <h2 id="gettingStartedTitle">Welcome to the iCARE healthcare system!</h2>
            <p>
                This is a healthcare system used by doctors nurses, and admins.
                The goal of the system is to allow workers to see their active patients and patient data.
                This is a system created by Group4.
            </p>
        </section>
    </div>

    <button type="button" onclick="location.href='@Url.Action("Index", "ManageAccounts")'">Manage Accounts for Admin</button>
    <button type="button" onclick="location.href='@Url.Action("Index", "DisplayPalette")'">Palette</button>
    <button type="button" onclick="location.href='@Url.Action("Index", "AssignPatient")'">Assign Patient</button>
    <button type="button" onclick="location.href='@Url.Action("Index", "ManagePatient")'">Manage Patient</button>
    <button type="button" onclick="location.href='@Url.Action("Index", "ImportImage")'">Import Image</button>

</main>