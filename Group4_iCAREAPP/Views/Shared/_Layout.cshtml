<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: navy;">
        <div class="container">
            @Html.ActionLink("iCARE", "Index", "Home", null, new { @class = "navbar-brand", style = "color:floralwhite;" })
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (ViewBag.CurrentUser != null && ViewBag.CurrentUser.ID == "admin")
                        {
                            <li>@Html.ActionLink("Manage Workers", "Index", "ManageWorker", null, new { @class = "nav-link", style = "color:floralwhite;" })</li>
                        }
                        else if (ViewBag.CurrentWorker != null &&
                                 (ViewBag.CurrentWorker.userPermission == "01" || ViewBag.CurrentWorker.userPermission == "02"))
                        {
                            <li>@Html.ActionLink("My Board", "Index", "DisplayMyBoard", new { area = "" }, new { @class = "nav-link", style = "color:floralwhite;" })</li>
                            <li>@Html.ActionLink("Palette", "Index", "DisplayPalette", new { area = "" }, new { @class = "nav-link", style = "color:floralwhite;" })</li>
                            <li>@Html.ActionLink("iCARE Board", "Index", "iCAREBoard", new { area = "" }, new { @class = "nav-link", style = "color:floralwhite;" })</li>
                        }

                        <li>@Html.ActionLink("Logout", "Logout", "UserAuthentication", null, new { @class = "nav-link", style = "color:floralwhite;" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "UserAuthentication", null, new { @class = "nav-link", style = "color:floralwhite;" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Group4</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


