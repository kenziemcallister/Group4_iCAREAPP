@model Group4_iCAREAPP.Models.iCareWorker

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>

<div class="profile-details">
    <table class="table">
        <tr>
            <th>ID</th>
            <td>@Model.ID</td> <!--Gather the the ID of the worker-->
        </tr>
        <tr>
            <th>Name</th>
            <td>@ViewBag.UserName</td> <!--Gather the name of the worker (from UserID) -->
        </tr>
        <tr>
            <th>Profession</th> 
            <td>@Model.profession</td> <!--Gather the profession of the worker-->
        </tr>
        <tr>
            <th>Creator</th>
            <td>@Model.creator</td> <!--getting the id of the person who assigned the worker the role-->
        </tr>
        <tr>
            <th>Hospital Unit</th>
            <td>@Model.GeoCodes.description</td> <!--getting the hospital unit where the worker is located in-->
        </tr>
    </table>
</div>

<p>
   <button type="button" onclick="location.href='@Url.Action("Index", "Home")'">Back</button>
</p>

