@model Group4_iCAREAPP.Models.iCareWorker

@{
    ViewBag.Title = "Create";
}

<h2>Create New Worker</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">
            User ID *
        </label>
        <div class="col-md-10">
            @Html.DropDownList("ID", ViewBag.UserID as SelectList, "Select User ID", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Profession
        </label>
        <div class="col-md-10">
            @Html.DropDownList("profession", ViewBag.Profession as SelectList, "Select Profession", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.profession, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">
            Creator ID *
        </label>
        <div class="col-md-10">
            @Html.DropDownList("ID", ViewBag.UserID as SelectList, "Select User ID", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.creator, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-10">
            User Permission Number *
        </label>
        <div class="col-md-10">
            @Html.DropDownList("userPermission", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.userPermission, "", new { @class = "text-danger" })
        </div>
    </div>
    <h2></h2>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" style="background-color: cornflowerblue; color: floralwhite; font-size: 16px; border-radius: 10px" value="Submit" class="button" />
            <button type="button" onclick="location.href='@Url.Action("Index", "ManageWorker")'">Back</button>
        </div>
    </div>
</div>
}

<div>
    <p>
        

    </p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
